{
  "name": "my-vscode-extension",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "displayName": "fairlyAccess",
  "description": "A hello world sample extension to demonstrate using React + Vite with the Webview UI Toolkit for VS Code.",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "fairlyAccess",
      "properties": {
        "fairlyAccess.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable fairlyAccess"
        },
        "fairlyAccess.auditOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Audit current file on save"
        },
        "fairlyAccess.markIssuesOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Generate PDF on save"
        },
        "fairlyAccess.generatePdfOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Generate PDF on save"
        }
      }
    },
    "commands": [
      {
        "command": "fairlyAccess.openProjectPanel",
        "title": "Project Panel"
      },
      {
        "command": "fairlyAccess.openIssuePanel",
        "title": "Issue Panel"
      },
      {
        "command": "fairlyAccess.closeProjectPanel",
        "title": "Close Project Panel"
      },
      {
        "command": "fairlyAccess.closeIssuePanel",
        "title": "close Issue Panel"
      },
      {
        "command": "fairlyAccess.audit",
        "title": "Audit Current File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vstodo-sidebar-view",
          "title": "farilyAccess",
          "icon": "media/fairlyAccess.svg"
        }
      ]
    },
    "views": {
      "vstodo-sidebar-view": [
        {
          "type": "webview",
          "id": "vstodo-sidebar",
          "name": "Analysis",
          "icon": "media/fairlyAccess.svg",
          "contextualTitle": "VSTodo"
        },
        {
          "type": "webview",
          "id": "vstodo-sidebar2",
          "name": "Projects",
          "icon": "media/fairlyAccess.svg",
          "contextualTitle": "VSTodo2"
        },
        {
          "type": "webview",
          "id": "vstodo-sidebar3",
          "name": "Settings",
          "icon": "media/fairlyAccess.svg",
          "contextualTitle": "VSTodo3"
        }
      ]
    }
  },
  "scripts": {
    "dev": "cd src/webview && vite",
    "build": "tsc && cd src/webview && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "dotenv": "^16.4.7",
    "fs": "^0.0.1-security",
    "idb": "^8.0.2",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-resolve": "^2.5.2",
    "vite-plugin-ts": "^1.3.2-1",
    "zustand": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/vscode": "^1.97.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react": "^1.3.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vscode-test": "^1.5.0"
  }
}
